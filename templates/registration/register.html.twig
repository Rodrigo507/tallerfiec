{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Registro</h1>


    {{ form_start(registrationForm) }}
    <div class="form-control">
        {# Nombre #}
        <i class="bi bi-person"></i> {{ form_label(registrationForm.nombrre,"Nombre",{'attr':{'class':'mb-2'}}) }}
        {{ form_widget(registrationForm.nombrre,{'attr':{'class':'mb-2'}}) }}

        <small>{{ form_help(registrationForm.nombrre) }}</small>

        <div class="form-error">
            {{ form_errors(registrationForm.nombrre) }}
        </div>

        {# Apellido #}
        <i class="bi bi-person-lines-fill"></i> {{ form_label(registrationForm.apellido) }}
        {{ form_widget(registrationForm.apellido) }}

        <small>{{ form_help(registrationForm.apellido) }}</small>

        <div class="form-error">
            {{ form_errors(registrationForm.apellido) }}
        </div>
        {# Correo #}
        <i class="fa fa-calendar"></i> {{ form_label(registrationForm.email) }}
        {{ form_widget(registrationForm.email) }}

        <small>{{ form_help(registrationForm.email) }}</small>

        <div class="form-error">
            {{ form_errors(registrationForm.email) }}
        </div>

        {# Correo #}
        <i class="bi bi-key"></i> {{ form_label(registrationForm.plainPassword) }}
        {{ form_widget(registrationForm.plainPassword) }}

        <small>{{ form_help(registrationForm.plainPassword) }}</small>

        <div class="form-error">
            {{ form_errors(registrationForm.plainPassword) }}
        </div>


    </div>

    {# {{ form_row(registrationForm.email) }} #}
    {# {{ form_row(registrationForm.plainPassword, { #}
    {# label: 'Password' #}
    {# }) }} #}
    {# {{ form_row(registrationForm.agreeTerms) }} #}

    <button type="submit" class="btn btn-success">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
